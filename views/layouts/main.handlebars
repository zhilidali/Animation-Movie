	{{!-- 跨页测试 --}}
	{{#if showTests}}<link rel="stylesheet" href="/vendor/mocha.css">{{/if}}
	<link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.min.css">
	<link rel="stylesheet" href="/css/main.css">
</head>
<body>
	<header>
		<img src="/img/QQ.png" width="150" height="150" alt="请打开手机QQ扫描二维码">
